{
  "mcpServers": {
    "grepai": {
      "command": "grepai",
      "args": ["mcp-serve"],
      "env": {
        "OLLAMA_HOST": "http://localhost:11434",
        "OLLAMA_MODEL": "nomic-embed-text"
      }
    },
    "graph-code": {
      "command": "python",
      "args": ["-m", "code_graph_rag.mcp_server"],
      "cwd": "~/.claude/apex/integrations/graph-code/src",
      "env": {
        "MEMGRAPH_HOST": "localhost",
        "MEMGRAPH_PORT": "7687"
      }
    }
  }
}
